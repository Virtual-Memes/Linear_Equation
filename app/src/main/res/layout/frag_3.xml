<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:background="@drawable/tv_st2"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="36dp"
            android:text="三阶行列式计算器"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/L_11"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/L_12"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/L_13"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/L_21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_st1"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="36sp" />
            <EditText
                android:id="@+id/L_22"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/L_23"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/L_31"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/L_32"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/L_33"
                android:gravity="center"
                android:textSize="36sp"
                android:inputType="numberSigned|numberDecimal"
                android:background="@drawable/edit_st1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5">
        <Button
            android:id="@+id/Get_R"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/button_st1"
            android:text="计算"
            android:textColor="#383838"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dis_R"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/tv_st1"
            android:gravity="center_vertical"
            android:hint="计算结果为:"
            android:paddingHorizontal="20dp"
            android:textColor="#310000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/button_st3"
            android:text="清除"
            android:textColor="#383838"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>